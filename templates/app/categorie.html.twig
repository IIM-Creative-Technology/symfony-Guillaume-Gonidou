{% extends 'base.html.twig' %}

{% block title %}Hello AppController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <div class="example-wrapper">
        <h2>Product in {{ category.name }}</h2>
        <a href="{{ path('app_index') }}">Return to index</a>
        <div>
            <a href=" {{path('app_category', {'id': category.id, 'tri': 'desc'}) }}"><p>trié par prix plus plus petit au plus grand</p></a>
            <a href=" {{path('app_category', {'id': category.id, 'tri': 'asc'}) }}"><p>trié par prix plus plus grand au plus petit</p></a>
            <a href=" {{path('app_category', {'id': category.id, 'tri': 'none'}) }}"><p>enlever le tri</p></a>
        </div>

        {% if tri == 'desc' or  tri == 'asc' %}
            {% for products in product %}
                <a href="{{path('app_product', {'id': products.id}) }}">
                    <div class="Produit">
                        <h3>{{ products.name }}</h3>
                    </div>
                </a>
            {% endfor %}

        {% else %}
            {% for products in category.products %}
                <a href="{{path('app_product', {'id': products.id}) }}">
                    <div class="Produit">
                        <h3>{{ products.name }}</h3>

                    </div>
                </a>
            {% endfor %}
        {% endif %}


    </div>
</div>
{% endblock %}
